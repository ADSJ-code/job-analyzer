<article class="job-card" id="<%= dom_id job %>">
  
  <div class="card-body">
    <div class="logo-box">
      <% if job.company_logo_url.present? && job.company_logo_url.to_s.start_with?('http') %>
        <%= image_tag job.company_logo_url, 
              alt: "#{job.company_name} logo", 
              class: "logo-img",
              referrerpolicy: "no-referrer" %>
      <% else %>
        <span style="font-size: 2.5rem;">🏢</span>
      <% end %>
    </div>

    <hgroup style="margin-bottom: 0;">
      <h5 style="margin-bottom: 0.5rem; font-weight: bold;"><%= job.title %></h5>
      <h6 style="color: var(--muted-color);"><%= job.company_name %></h6>
    </hgroup>
    
    <small style="margin-top: 1rem; display: block; color: var(--muted-color);">
      📍 <%= job.location %>
    </small>
  </div>

  <footer class="card-footer">
    <%= link_to "View Details", job, role: "button", class: "contrast outline" %>
  </footer>

</article>