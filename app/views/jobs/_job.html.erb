<article id="<%= dom_id job %>">
  <header>
    <div class="grid">
      <div style="flex: 0 0 80px; display: flex; align-items: center; justify-content: center;">
        <% if job.company_logo_url.present? && job.company_logo_url.start_with?('http') %>
          <%= image_tag job.company_logo_url, 
                alt: "#{job.company_name} logo", 
                style: "max-width: 100%; max-height: 60px; border-radius: 4px;", 
                referrerpolicy: "no-referrer" %>
        <% else %>
          <div style="width: 60px; height: 60px; background: #f0f0f0; display: flex; align-items: center; justify-content: center; border-radius: 4px; font-size: 1.5rem;">
            üè¢
          </div>
        <% end %>
      </div>

      <div>
        <h5 style="margin-bottom: 5px;"><%= job.title %></h5>
        <small style="color: #555;">
          <strong><%= job.company_name %></strong>
        </small>
        <br>
        <small>üìç <%= job.location %></small>
      </div>
    </div>
  </header>

  <footer>
    <%= link_to "View Details", job, role: "button", class: "outline secondary", style: "width: 100%;" %>
  </footer>
</article>