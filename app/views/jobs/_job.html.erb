<article id="<%= dom_id job %>">
  <header>
    <div class="grid">
      <div style="flex: 0 0 100px;">
        <% if job.company_logo_url.present? && job.company_logo_url.start_with?('http') %>
          <%= image_tag job.company_logo_url, alt: "#{job.company_name} logo", style: "max-width: 80px; height: auto; border-radius: 4px;" %>
        <% else %>
          <div style="width: 80px; height: 80px; background: #eee; display: flex; align-items: center; justify-content: center; border-radius: 4px;">üè¢</div>
        <% end %>
      </div>

      <div>
        <h4 style="margin-bottom: 0.2rem;"><%= job.title %></h4>
        <small>
          <strong><%= job.company_name %></strong> ‚Ä¢ <%= job.location %>
        </small>
      </div>
    </div>
  </header>

  <div class="description" style="max-height: 300px; overflow-y: auto; padding: 10px; background: #f9f9f9; border-radius: 5px; border: 1px solid #ddd; margin-bottom: 20px;">
    <%= simple_format(job.description) %>
  </div>

  <footer>
    <div class="grid">
      <% if job.job_url.present? %>
        <a href="<%= job.job_url %>" role="button" target="_blank" rel="noopener noreferrer">
          Apply for this Job
        </a>
      <% end %>

      <% if job.company_website.present? %>
        <a href="<%= job.company_website %>" role="button" class="secondary outline" target="_blank" rel="noopener noreferrer">
          Visit Website
        </a>
      <% end %>
    </div>
  </footer>
</article>