<style>
  :root {
    --bg-dark: #0f172a;
    --bg-light: #1e293b;
    --card-bg: #1e293b;
    --text-main: #f8fafc;
    --text-muted: #94a3b8;
    --accent: #3b82f6;
    --accent-hover: #2563eb;
    --border-color: #334155;
  }

  body {
    background-color: var(--bg-dark);
    background-image: radial-gradient(circle at 50% 0%, #334155 0%, var(--bg-dark) 75%);
    background-attachment: fixed;
    color: var(--text-main);
    font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    margin: 0;
    min-height: 100vh;
  }

  .page-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px 40px 20px;
  }

  .top-nav {
    display: flex;
    align-items: center;
    padding: 20px 0;
    margin-bottom: 30px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1); 
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: var(--text-muted);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    padding: 10px 20px;
    border-radius: 50px;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid var(--border-color);
    transition: all 0.2s;
    backdrop-filter: blur(5px);
  }
  
  .back-link:hover {
    color: #fff;
    border-color: var(--accent);
    transform: translateX(-5px);
  }

  .job-grid-layout {
    display: grid;
    grid-template-columns: 350px 1fr; 
    gap: 40px; 
    align-items: start;
  }

  .sidebar-card {
    background-color: rgba(30, 41, 59, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 30px;
    position: sticky;
    top: 30px;
    display: flex;
    flex-direction: column;
    gap: 24px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }

  .sidebar-header {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .company-avatar-large {
    width: 110px;
    height: 110px;
    background: #fff;
    border-radius: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    border: 4px solid var(--card-bg);
  }

  .company-avatar-large img {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
  }

  .job-main-title {
    font-size: 1.4rem;
    font-weight: 700;
    line-height: 1.3;
    color: #fff;
  }

  .sidebar-meta {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 12px;
    color: #cbd5e1;
    font-size: 0.9rem;
    background: rgba(0, 0, 0, 0.2);
    padding: 12px;
    border-radius: 12px;
  }

  .actions-stack {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 10px;
  }

  .btn-full {
    width: 100%;
    padding: 16px;
    border-radius: 12px;
    font-weight: 700;
    text-align: center;
    text-decoration: none;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    font-family: inherit;
    box-sizing: border-box;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent), var(--accent-hover));
    color: white;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.6);
  }

  .btn-secondary {
    background-color: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-muted);
  }

  .btn-secondary:hover {
    border-color: var(--text-main);
    color: var(--text-main);
    background: rgba(255,255,255,0.05);
  }

  .btn-disabled {
    background-color: #334155;
    color: #94a3b8;
    cursor: not-allowed;
    opacity: 0.7;
  }

  .content-card {
    background-color: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 24px;
    padding: 50px;
    box-shadow: none;
  }

  .section-label {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--accent);
    font-weight: 800;
    margin-bottom: 25px;
    display: block;
    opacity: 0.9;
  }

  .description-content {
    line-height: 1.9;
    color: #e2e8f0;
    font-size: 1.1rem;
    white-space: pre-wrap;
  }

  .footer-meta {
    margin-top: 60px;
    padding-top: 30px;
    border-top: 1px solid var(--border-color);
    text-align: center;
    font-size: 0.85rem;
    color: var(--text-muted);
    opacity: 0.6;
  }

  @media (max-width: 900px) {
    .job-grid-layout {
      grid-template-columns: 1fr;
    }
    .sidebar-card {
      position: static;
      flex-direction: row;
      flex-wrap: wrap;
      align-items: center;
    }
    .sidebar-header {
      border-bottom: none;
      border-right: 1px solid var(--border-color);
      padding-bottom: 0;
      padding-right: 20px;
      margin-right: 20px;
    }
    .content-card {
      padding: 30px;
    }
  }

  @media (max-width: 700px) {
    .sidebar-card {
      flex-direction: column;
    }
    .sidebar-header {
      border-right: none;
      border-bottom: 1px solid var(--border-color);
      padding-right: 0;
      padding-bottom: 20px;
      margin-right: 0;
      width: 100%;
    }
  }
</style>

<div class="page-wrapper">
  
  <nav class="top-nav">
    <%= link_to jobs_path, class: "back-link" do %>
      <span>‚Üê</span> <%= t('show.back') %>
    <% end %>
  </nav>

  <div class="job-grid-layout">
    
    <aside class="sidebar-card">
      <div class="sidebar-header">
        <div class="company-avatar-large">
          <% if @job.company_logo_url.present? && @job.company_logo_url != "Not found" %>
             <img src="<%= @job.company_logo_url %>" alt="<%= @job.company_name %>">
          <% else %>
             <img src="https://ui-avatars.com/api/?name=<%= URI.encode_www_form_component(@job.company_name) %>&background=random&color=fff&size=128&bold=true" alt="<%= @job.company_name %>">
          <% end %>
        </div>
        
        <h1 class="job-main-title"><%= @job.title %></h1>
        <div style="color: var(--accent); font-weight: 600;"><%= @job.company_name %></div>
      </div>

      <div class="sidebar-meta">
        <div class="meta-item">
          <span>üìç</span> <%= @job.location %>
        </div>
        <div class="meta-item">
          <span>üìÖ</span> <%= t('show.posted_at') %> <%= @job.created_at.strftime("%d/%m/%Y") %>
        </div>
      </div>

      <div class="actions-stack">
        <% if @job.job_url.present? %>
          <a href="<%= @job.job_url %>" target="_blank" class="btn-full btn-primary">
            <%= t('actions.apply') %> üöÄ
          </a>
        <% else %>
          <button disabled class="btn-full btn-disabled">
            <%= t('actions.unavailable') %>
          </button>
        <% end %>

        <% if @job.company_website.present? && @job.company_website != "Not found" %>
          <a href="<%= @job.company_website %>" target="_blank" class="btn-full btn-secondary">
            üåê <%= t('show.website') %>
          </a>
        <% else %>
          <button disabled class="btn-full btn-disabled">
            üåê Site <%= t('actions.unavailable') %>
          </button>
        <% end %>
      </div>
    </aside>

    <main class="content-card">
      <span class="section-label"><%= t('show.description') %></span>
      
      <div class="description-content">
        <% if @job.description.present? %>
          <%= simple_format(@job.description) %> 
        <% else %>
          <p style="color: #64748b; font-style: italic;">No description provided by the source.</p>
        <% end %>
      </div>

      <div class="footer-meta">
        ID: <%= @job.id %> | Source: Google Jobs
      </div>
    </main>

  </div>
</div>