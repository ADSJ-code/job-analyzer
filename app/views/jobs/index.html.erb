<style>
  :root {
    --bg-color: #0f172a;
    --card-bg: #1e293b;
    --text-main: #f8fafc;
    --text-muted: #94a3b8;
    --accent: #3b82f6;
    --accent-hover: #2563eb;
    --border-color: #334155;
  }

  body {
    background-color: var(--bg-color);
    color: var(--text-main);
    font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    margin: 0;
  }

  .dashboard-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .header-section {
    text-align: center;
    margin-bottom: 50px;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 30px;
  }

  .header-section h1 {
    font-size: 2.5rem;
    margin: 0 0 10px 0;
    background: linear-gradient(90deg, #60a5fa, #a855f7);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .jobs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 25px;
  }

  .job-card {
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    height: 100%;
    box-sizing: border-box;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .job-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    border-color: var(--accent);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20px;
  }

  .company-avatar {
    width: 60px;
    height: 60px;
    background: #fff;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .company-avatar img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
  }

  .platform-badge {
    font-size: 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    color: #cbd5e1;
    padding: 4px 10px;
    border-radius: 20px;
    font-weight: 500;
  }

  .card-content {
    flex-grow: 1;
    margin-bottom: 25px;
  }

  .job-title {
    font-size: 1.3rem;
    font-weight: 700;
    margin: 0 0 8px 0;
    line-height: 1.4;
    color: #fff;
  }

  .company-name {
    color: var(--accent);
    font-weight: 600;
    margin: 0 0 12px 0;
    font-size: 0.95rem;
  }

  .location {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .card-actions {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
  }

  .btn {
    padding: 12px 0;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
    display: inline-block;
  }

  .btn-outline {
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-main);
  }

  .btn-outline:hover {
    border-color: var(--text-main);
    background: rgba(255,255,255,0.05);
  }

  .btn-fill {
    background: var(--accent);
    color: white;
    border: 1px solid var(--accent);
  }

  .btn-fill:hover {
    background: var(--accent-hover);
    transform: scale(1.02);
  }
  
  /* Empty State */
  .empty-state {
    text-align: center;
    grid-column: 1 / -1;
    padding: 40px;
    color: var(--text-muted);
  }
</style>

<div class="dashboard-container">
  <header class="header-section">
    <h1>üöÄ <%= t('app_name') %></h1>
    <p style="color: #94a3b8;"><%= t('subtitle') %></p>
  </header>

  <% if @jobs.empty? %>
    <div class="empty-state">
      <h2><%= t('empty.title') %></h2>
      <p><%= t('empty.text') %></p>
      <code><%= t('empty.instruction') %></code>
    </div>
  <% else %>
    <div class="jobs-grid">
      <% @jobs.each do |job| %>
        <article class="job-card">
          
          <div class="card-header">
            <div class="company-avatar">
              <% if job.company_logo_url.present? && job.company_logo_url != "Not found" %>
                 <img src="<%= job.company_logo_url %>" alt="<%= job.company_name %>">
              <% else %>
                 <img src="https://ui-avatars.com/api/?name=<%= URI.encode_www_form_component(job.company_name) %>&background=random&color=fff&size=128&bold=true" alt="<%= job.company_name %>">
              <% end %>
            </div>
            <span class="platform-badge"><%= t('platform_badge') %></span>
          </div>

          <div class="card-content">
            <h2 class="job-title" title="<%= job.title %>">
              <%= truncate(job.title, length: 55) %>
            </h2>
            <div class="company-name"><%= job.company_name %></div>
            
            <div class="location">
              <span>üìç <%= truncate(job.location, length: 30) %></span>
            </div>
          </div>

          <div class="card-actions">
            <%= link_to t('actions.details'), job_path(job), class: "btn btn-outline" %>
            
            <% if job.job_url.present? %>
              <a href="<%= job.job_url %>" target="_blank" class="btn btn-fill">
                <%= t('actions.apply') %> ‚Üó
              </a>
            <% else %>
              <button disabled class="btn btn-outline" style="opacity: 0.5; cursor: not-allowed;">
                <%= t('actions.unavailable') %>
              </button>
            <% end %>
          </div>

        </article>
      <% end %>
    </div>
  <% end %>
</div>